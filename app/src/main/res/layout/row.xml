<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent" android:layout_height="match_parent"
    android:orientation="vertical"
    android:id="@+id/row">

    <TableLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TableRow>

            <TextView
                android:text="@string/peso_historico_row"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/txtPesoHistorico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow>


            <TextView
                android:text="@string/altura_historico_row"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/txtAlturaHistorico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>

        <TableRow>

            <TextView
                android:text="@string/imc_historico_row"
                android:layout_marginRight="10dp"/>

            <TextView
                android:id="@+id/txtImcHistorico"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"/>

        </TableRow>

    </TableLayout>

</LinearLayout>
